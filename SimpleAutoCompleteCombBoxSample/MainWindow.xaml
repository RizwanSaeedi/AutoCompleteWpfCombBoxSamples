<Window x:Class="SimpleAutoCompleteCombBoxSample.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SimpleAutoCompleteCombBoxSample"
		xmlns:ssoft='clr-namespace:SaeediSoftWpfUiControls;assembly=SaeediSoftWpfUiControls'
		mc:Ignorable="d"
		Title="MainWindow"
		Height="450"
		Width="800">
	<StackPanel>
		<ssoft:ComboBoxAutoComplete Loaded='autoCompleteComboBox_Loaded'
									FilterMode='Contains'
									HorizontalAlignment='Left'
									x:Name="uc_cbox"
									DisplayMemberPath='DisplayField' />
	</StackPanel>
</Window>
